<div class="tag-post-list bg-none" data-test-tag-post-list>
  <h3
    id={{this.titleId}}
    class="text-lg tag-post-list-title"
    data-test-tag-name
  >
    {{@tag.name}}
  </h3>

  <ul
    class="list-unstyled"
    aria-labelledby={{this.titleId}}
    data-test-post-list
  >
    {{#each this.topPosts as |post|}}
      <li class="my-1">
        <LinkTo
          data-test-post-link
          @route="post"
          @model={{post.id}}
        >
          {{no-widow post.title}}
        </LinkTo>
      </li>
    {{/each}}
  </ul>

  <div class="mt-1">
    <LinkTo
      data-test-more-posts
      @route="tag"
      @model={{@tag.id}}
    >
      More {{@tag.name}}...
    </LinkTo>
  </div>
</div>
