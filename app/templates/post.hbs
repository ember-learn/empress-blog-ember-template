{{! template-lint-disable no-redundant-role }}
{{#let @model.post as |post|}}
  <article class="post-content {{unless post.image 'no-image'}}">
    {{#if (eq post.primaryTag.id "newsletter")}}
      <img class="times-logo" src="/ember-times-logo.svg" alt="" role="presentation">
    {{/if}}
    <header>
      <h1 class="mb-1">{{post.title}}</h1>
    </header>

    <div class="text-muted mb-3">
      <time>{{date-format post.date}}</time> &ndash;
      <AuthorList @post={{post}} />
    </div>

    <MarkdownToHtml @markdown={{post.content}} class="mt-2" />

    <hr class="my-6">

    <Comments @post={{post}} />
  </article>
{{/let}}
